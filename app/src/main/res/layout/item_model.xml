<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="180dp"
    android:layout_height="280dp"
    app:cardElevation="@null"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_model"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_change_history_black_24dp" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Decor central and horizontal"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:layout_margin="4dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:id="@+id/text_description"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="2"
            android:text="Looooogn Text asfeaf uisei ihoihnoi hihnjo eaof oiueghofa iuhgofia"/>
        <View
            android:layout_width="50dp"
            android:layout_height="0.2dp"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:layout_margin="4dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/text_order"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="Order : 500$" />

    </LinearLayout>

</android.support.v7.widget.CardView>
